<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />

            <stroke android:width="1dip" android:color="#BDBDBD" />
            <gradient android:angle="-90" android:startColor="#9c9fb7" android:endColor="#757394"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#BDBDBD" />
            <solid android:color="#baacba"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#BDBDBD" />
            <gradient android:angle="-90" android:endColor="#a2ecefe8" android:startColor="#1C1E47"/>
        </shape>
    </item>
</selector>